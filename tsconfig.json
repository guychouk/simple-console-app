{
    "compilerOptions": {
        "target": "es2018",
        "module": "CommonJS",
        "lib": ["es2019"],
        "allowJs": false,
        "checkJs": false,
        "declaration": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
}
